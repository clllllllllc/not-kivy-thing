#:kivy 2.0.0

<MenuScreen>:
    BoxLayout:
        LoginButton:
            text: "Login"
            on_press: root.manager.current = 'login'
        
        SignupButton: 
            text: "Signup"
            on_press: root.manager.current = 'signup'
    

<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            Label:
                text: "login"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            BoxLayout:
                orientation: "vertical"
                size_hint: .5, .3
                TextInput:
                    text: root.temp_pass
                TextInput:
                    text: root.temp_user
        AnchorLayout: 
            anchor_x: "right"
            anchor_y: "bottom"
            size_hint: .3, .2
            Button:
                text: "Sumbint"
                on_press: root.check_login()

<SignupScreen>:
    AnchorLayout:
        anchor_y: "top"
        anchor_x: "left"
        TextInput:
            text: "username"
            size_hint: .4, .1

    AnchorLayout:
        anchor_y: "top"
        anchor_x: "right"
        TextInput:
            text: "password"
            size_hint: .4, .1
    
    AnchorLayout:
        anchor_y: "bottom"
        anchor_x: "left"
        TextInput:
            text: "code"
            size_hint: .4, .1

    AnchorLayout:
        anchor_y: "bottom"
        anchor_x: "right"
        TextInput:
            text: "email"
            size_hint: .4, .1
    
    AnchorLayout:
        anchor_y: "center"
        anchor_x: "center"
        Label:
            text: "From each according to his ability, to each according to his needs"
            size_hint: .3, .3
    
