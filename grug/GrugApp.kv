    BoxLayout:
        LoginButton:
            text: "Login"
            on_press: root.manager.current = 'login'
        
        SignupButton: 
            text: "Signup"
            on_press: root.manager.current = 'signup'
    

<LoginScreen>:
    MDCard:
        size_hint: 0.6, 0.8
        pos_hint: {"center_x":0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"
                MDLabel:
                    id: welcome
                    text: "login"
                    font_size: 39
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: .6, .4
                    MDTextFieldRound:
                        id: username
                        hint_text: "username"
                        icon_right: "account"
                        #text: root.temp_pass
                        padding_y: 10
                    MDTextFieldRound:
                        id: password
                        hint_text: "passoword"
                        icon_right: "eye-off"
                        padding_y: 10
                        password: True
                        #text: root.temp_user
            AnchorLayout: 
                anchor_x: "right"
                anchor_y: "bottom"
                size_hint: .3, .2
                Button:
                    text: "Sumbit"
                    on_press: root.check_login()

<SignupScreen>:
    AnchorLayout:
        anchor_y: "top"
        anchor_x: "left"
        TextInput:
            id: username
            text_hint: "username"
            size_hint: .4, .1

    AnchorLayout:
        anchor_y: "top"
        anchor_x: "right"
        TextInput:
            id: password
            text_hint: "password"
            size_hint: .4, .1
    
    AnchorLayout:
        anchor_y: "bottom"
        anchor_x: "left"
        TextInput:
            id: code
            text_hint: "code"
            size_hint: .4, .1

    AnchorLayout:
        anchor_y: "bottom"
        anchor_x: "right"
        TextInput:
            id: email
            text_hint: "email"
            size_hint: .4, .1
    
    AnchorLayout:
        anchor_y: "center"
        anchor_x: "center"
        Button:
            text: "From each according to his ability, to each according to his needs"
            size_hint: .3, .3
            on_press: root.check_signup()
    
